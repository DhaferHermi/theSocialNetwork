{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <a class="btn btn-primary Fright" href="{{ path('event_new') }}" >Add Event</a>
                {% endif %}
                <div class="month">
                    <ul>
                        <li class="prev">&#10094;</li>
                        <li class="next">&#10095;</li>
                        <li>
                            February<br>
                            <span style="font-size:18px">2022</span>
                        </li>
                    </ul>
                </div>

                <ul class="weekdays">
                    <li>Mo</li>
                    <li>Tu</li>
                    <li>We</li>
                    <li>Th</li>
                    <li>Fr</li>
                    <li>Sa</li>
                    <li>Su</li>
                </ul>

                <ul class="days">
                    <li>1</li>
                    <li>2</li>
                    <li>3</li>
                    <li>4</li>
                    <li>5</li>
                    <li>6</li>
                    <li>7</li>
                    <li>8</li>
                    <li>9</li>
                    <li><span class="active">10</span></li>
                    <li>11</li>
                    <li>12</li>
                    <li>13</li>
                    <li>14</li>
                    <li>15</li>
                    <li>16</li>
                    <li>17</li>
                    <li>18</li>
                    <li>19</li>
                    <li>20</li>
                    <li>21</li>
                    <li>22</li>
                    <li>23</li>
                    <li>24</li>
                    <li>25</li>
                    <li>26</li>
                    <li>27</li>
                    <li>28</li>
                    <li>29</li>
                    <li>30</li>
                    <li>31</li>
                </ul>
            </div>
            <div class="col-md-8">
                {% for event in events %}
                <div class="event">
                    <span class="right"> {{ event.dateDeb ? event.dateDeb|date('Y-m-d') : '' }}
                -  {{ event.dateFin ? event.dateFin|date('Y-m-d') : '' }}</span>
                    <h1 class="titreEvent">{{ event.title }}</h1>
                    <p class="descEvent">{{ event.description }}</p>
                    <div class="actions">
                        {% if event.user==app.user %}
                        <a href="{{ path('event_edit', {'id': event.id}) }}"><i class="fa fa-pencil"></i></a>
                        {% endif %}
                        <a href="{{ path('event_show', {'id': event.id}) }}"><i class="fa fa-eye"></i></a>
                       {% if event.user==app.user %}
                        <a href="{{ path('event_delete', {'id': event.id}) }}">
                            <i class="fa fa-trash"></i>
                            {% endif %}
                        </a>
                    </div>
                </div>
                {% else %}

                {% endfor %}
            </div>
        </div>
    </div>


{% endblock %}
